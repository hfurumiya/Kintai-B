<% provide(:title, @user.name) %>

<div>
  <table class="table table-condensed table-bordered">
    <tr>
      <td class="col-4 text-center">
        <%= link_to "⇦ 前月へ", user_path(date: @first_day.prev_month), class: "btn btn-default" %>
        【<%= l(@first_day, format: :middle) %>】時間管理表
        <%= link_to "次月へ ⇨", user_path(date: @first_day.next_month), class: "btn btn-default" %>
      </td>
      <td class="col-3 text-center">指定勤務時間: <%= format_basic_info(@user.work_time) %></td>
      <td class="col-3 text-center">基本時間: <%= format_basic_info(@user.basic_time) %></td>
      <td class="col-2 text-center">初日: <%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td class="col-2 text-center">所属:<%= @user.department.present? ? @user.department : "所属なし" %></td>
      <td class="col-2 text-center">氏名：<%= @user.name %></td>
      <td class="col-2 text-center">コード</td>
      <td class="col-1 text-center"></td>
      <td class="col-2 text-center">出勤日数:<%= @worked_sum %>日</td>
      <td class="col-2 text-center">締め: <%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th>日付</th>
        <th>曜日</th>
        <th>勤怠登録</th>
        <th>出勤時間</th>
        <th>退勤時間</th>
        <th>在社時間</th>
        <th>備考</th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $youbi[day.worked_on.wday] %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-default btn-block btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.started_at, format: :time) if day.started_at.present? %></td>
          <td><%= l(day.finished_at, format: :time) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
　　　　　　　<% @total_working_times = @total_working_times.to_f + str_times.to_f %>
  　　　　　　    <% end %>
          </td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td rowspan="2"></td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="2"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td>
      </tr>
    </tfoot>    
  </table>
</div>